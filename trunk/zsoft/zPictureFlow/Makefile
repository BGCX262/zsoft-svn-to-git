CXX	=	$(TOOLPREFIX)/bin/arm-linux-gnueabi-g++
CFLAGS	=	-pipe -O2 -mcpu=iwmmxt -mtune=iwmmxt -D_REENTRANT -DPICTUREFLOW_LANDSCAPE -DPICTUREFLOW_EZX -DEZX_E2 -DQT_THREAD_SUPPORT -DNO_DEBUG
CXXFLAGS=	-pipe -DQWS -fno-exceptions -fno-rtti -O2 -mcpu=iwmmxt -mtune=iwmmxt -D_REENTRANT -DPICTUREFLOW_LANDSCAPE -DPICTUREFLOW_EZX -DEZX_E2 -DNO_DEBUG
INCPATH	=	-I$(QTDIR)/include -I$(EZXDIR)/include -I $(TOOLPREFIX)/arm-linux-gnueabi/include
LINK	=	$(TOOLPREFIX)/bin/arm-linux-gnueabi-gcc
LFLAGS	=	-Wl,-rpath-link,$(QTDIR)/lib
LIBS	=	$(SUBLIBS) -L$(TOOLPREFIX)/arm-linux-gnueabi/lib -L$(QTDIR)/lib -L$(EZXDIR)/lib -lm -lqte-mt -lezxpm -ljpeg -lezxappbase -lezxtapi-xscale-r -llog_util -llighting
MOC	=	$(QTDIR)/bin/moc
UIC	=	$(QTDIR)/bin/uic

